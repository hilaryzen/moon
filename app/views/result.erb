    <h2>Other Physical Maladies</h2>
    <% physical_advice = {'headache' => 'advice for headache', 'fatigue' => 'advice for fatigue', 'tender-breasts' => 'advice for tender breasts', 'muscle-aches' => 'advice for muscle aches', 'nothing' => 'advice for nothing'} %> 
    <% checked = false %>
    <% if params[:physical1] == 'headache' %>
    <% checked = true %>
    <h3>For Headaches</h3>
    <div><p><%= physical_advice['headache'] %></p></div>
    <% end %>
    <% if params[:physical2] == 'fatigue' %>
